{
  "expo": {
    "name": "Agrox",
    "slug": "Agrox",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/Logo_AGROX-Blanco.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./src/assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2E7D32"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/iconoLogoAPK.ico",
        "backgroundColor": "#2E7D32"
      },
      "edgeToEdgeEnabled": false
    },
    "web": {
      "favicon": "./src/assets/Isotipo_AGROX-sinFondo.png"
    },
    "plugins": [
      "expo-font"
    ]
  }
}
